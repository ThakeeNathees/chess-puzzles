from src.ui import UI

def main()

  # Initialization
  #----------------------------------------------------------------------------
  ui = UI()

  # Main game loop
  while not ui.should_close()
    # Update
    #--------------------------------------------------------------------------
    ui.update()

    # Draw
    #--------------------------------------------------------------------------
    ui.draw()
  end
  
  # De-Initialization
  #----------------------------------------------------------------------------
  ui.cleanup()
  #----------------------------------------------------------------------------
end


if _name == "@main"
  main()
end
